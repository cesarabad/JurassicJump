<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBBDBC"
    tools:context=".vistas.navegacion.Leaderboard">

    <ImageView
        android:id="@+id/gameLogoLeaderboard"
        android:layout_width="958dp"
        android:layout_height="679dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jurassicjump_logo" />

    <TextView
        android:id="@+id/leaderBoardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:text="@string/leaderBoardBtn"
        android:textColor="#000000"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameLogoLeaderboard" />

    <LinearLayout
        android:id="@+id/leaderBoardOutput"
        android:layout_width="804dp"
        android:layout_height="819dp"
        android:layout_marginTop="-30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderBoardLabel"
        app:layout_constraintVertical_bias="0.5"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>